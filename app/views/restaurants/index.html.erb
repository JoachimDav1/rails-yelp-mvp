<h1>HERE ARE ALL THE RESTAURANTS PICK YOUR FAVOURITE</h1>
<%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary"%>
<% @restaurants.each do |restaurant|%>
  <div class="card">
    <h2><%= restaurant.name %></h2>
    <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
  </div>
<% end %>


